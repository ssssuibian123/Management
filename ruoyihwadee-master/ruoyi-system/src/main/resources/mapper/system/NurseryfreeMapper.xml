<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.NurseryfreeMapper">
    
    <resultMap type="Nurseryfree" id="NurseryfreeResult">
        <result property="id"    column="id"    />
        <result property="name"    column="name"    />
        <result property="picture"    column="picture"    />
        <result property="level"    column="level"    />
        <result property="position"    column="position"    />
        <result property="beginTime"    column="beginTime"    />
        <result property="freeTime"    column="freeTime"    />
    </resultMap>

    <sql id="selectNurseryfreeVo">
        select id, name, picture, level, position, beginTime, freeTime from nurseryfree
    </sql>

    <select id="selectNurseryfreeList" parameterType="Nurseryfree" resultMap="NurseryfreeResult">
        <include refid="selectNurseryfreeVo"/>
        <where>  
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="picture != null  and picture != ''"> and picture = #{picture}</if>
            <if test="level != null  and level != ''"> and level = #{level}</if>
            <if test="position != null  and position != ''"> and position = #{position}</if>
            <if test="beginTime != null "> and beginTime = #{beginTime}</if>
            <if test="freeTime != null "> and freeTime = #{freeTime}</if>
        </where>
    </select>
    
    <select id="selectNurseryfreeById" parameterType="Integer" resultMap="NurseryfreeResult">
        <include refid="selectNurseryfreeVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertNurseryfree" parameterType="Nurseryfree">
        insert into nurseryfree
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="name != null">name,</if>
            <if test="picture != null">picture,</if>
            <if test="level != null">level,</if>
            <if test="position != null">position,</if>
            <if test="beginTime != null">beginTime,</if>
            <if test="freeTime != null">freeTime,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="name != null">#{name},</if>
            <if test="picture != null">#{picture},</if>
            <if test="level != null">#{level},</if>
            <if test="position != null">#{position},</if>
            <if test="beginTime != null">#{beginTime},</if>
            <if test="freeTime != null">#{freeTime},</if>
         </trim>
    </insert>

    <update id="updateNurseryfree" parameterType="Nurseryfree">
        update nurseryfree
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null">name = #{name},</if>
            <if test="picture != null">picture = #{picture},</if>
            <if test="level != null">level = #{level},</if>
            <if test="position != null">position = #{position},</if>
            <if test="beginTime != null">beginTime = #{beginTime},</if>
            <if test="freeTime != null">freeTime = #{freeTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteNurseryfreeById" parameterType="Integer">
        delete from nurseryfree where id = #{id}
    </delete>

    <delete id="deleteNurseryfreeByIds" parameterType="String">
        delete from nurseryfree where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>